<body style="background-color: rgb(43, 211, 233);">
    <section class="container forms">
        <div class="text-center">
            <div class="form-content">
                <h1>Signup</h1>

                <form action="/api/signup" method="post">
                    <div class="filed input-filed" style="">
                        <input type="text" name="username" placeholder="Username" style="width: 400px;border-radius: 10px;padding: 10px;">
                    </div><br>
                    <div class="filed input-filed">
                        <input type="password" name="password" placeholder="Password" style="width: 400px;border-radius: 10px;padding: 10px;">
                    </div><br>
                    <div class="filed button-filed">
                        <button style="width: 400px;border-radius: 10px;padding: 10px;background-color: blue;color: aliceblue;">Signup</button>
                    </div>
                    <br>
                    
                    <div class="form-link">
                        <span>Do you have an account ? <a href="/" class="signup-link" style="color: red;">Sign In</a> </span>
                    </div>
                </form>

            </div>
        </div>
    </section>
    
</body>
    
</html>